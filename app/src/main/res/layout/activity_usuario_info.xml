<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:background="@drawable/login_card_background"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <!-- Contenedor horizontal para los iconos de Regresar y Cerrar Sesión -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <!-- Icono de Regresar -->

            <!-- Espaciador -->
            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="34dp"
                android:layout_height="36dp"
                android:layout_gravity="start"
                android:layout_margin="1dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Icono de Cerrar Sesión -->
            <ImageView
                android:id="@+id/ivCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="Cerrar Sesión"
                android:src="@drawable/cerrar_sesion" />
        </LinearLayout>

        <!-- Título -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Información de Usuario"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#0B0B0B"
            android:layout_marginBottom="24dp" />

        <!-- Mensaje de estado -->
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text=""
            android:textColor="#D32F2F" />

        <!-- Nombre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Nombre"
            android:textColor="#101010"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:hint=" Nombre"
            android:textSize="22sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <!-- Correo Electrónico -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:textSize="22sp"
            android:textColor="#0D0D0D"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:clickable="false"
            android:focusable="false"
            android:hint=" Correo Electrónico"
            android:inputType="textEmailAddress"
            android:textSize="22sp" />

        <!-- Dirección -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textSize="22sp"
            android:textColor="#101010"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_border"
            android:hint=" Dirección"
            android:textSize="22sp" />

        <!-- Teléfono -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textSize="22sp"
            android:textColor="#090909"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:hint=" Teléfono"
            android:background="@drawable/edit_text_border"
            android:textSize="22sp"
            android:inputType="phone"
            android:layout_marginBottom="16dp" />

        <!-- Contraseña Actual -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña Actual"
            android:textSize="22sp"
            android:textColor="#101010"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:hint=" Contraseña Actual"
            android:background="@drawable/edit_text_border"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:layout_marginBottom="16dp" />

        <!-- Contraseña Nueva -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña Nueva"
            android:textSize="22sp"
            android:textColor="#101010"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="362dp"
            android:layout_height="34dp"
            android:hint=" Contraseña Nueva"
            android:background="@drawable/edit_text_border"
            android:textSize="22sp"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp" />

        <!-- Botón de Guardar -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Cambios"
            android:textColor="#FFFFFF"
            android:backgroundTint="#131414"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>