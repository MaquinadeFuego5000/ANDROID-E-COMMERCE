<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/border"
    android:layout_margin="16dp"
    android:elevation="4dp">



    <!-- ID Venta y Fecha -->
    <TextView
        android:id="@+id/tv_id_venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venta #1"
        android:textSize="18sp"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:shadowColor="#888888"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="3" />

    <TextView
        android:id="@+id/tv_fecha_venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha: 2024-11-27"
        android:textSize="16sp"
        android:textColor="#5A5A5A"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#888888"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Comprador -->
    <TextView
        android:id="@+id/tv_comprador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprador: Juan PÃ©rez"
        android:textSize="16sp"
        android:textColor="#4B4B4B"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-light"
        android:shadowColor="#888888"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Subtotal -->
    <TextView
        android:id="@+id/tv_subtotal_venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtotal: $8.62"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:shadowColor="#888888"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Total -->
    <TextView
        android:id="@+id/tv_total_venta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: $10.00"
        android:textSize="18sp"
        android:textColor="#4CAF50"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:shadowColor="#888888"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- Productos -->
    <TextView
        android:id="@+id/tv_productos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Productos:"
        android:textSize="16sp"
        android:textColor="#1976D2"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:shadowColor="#888888"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

</LinearLayout>
